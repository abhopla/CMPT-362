<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Entry"
                tools:ignore="MissingConstraints"
                android:textSize="25dp"
                android:layout_margin="10dp">
            </TextView>

            <TextView
                android:id="@+id/entry_transaction_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction Description"
                android:textSize="18sp"
                android:layout_margin="10dp">
            </TextView>

            <EditText
                android:id="@+id/entry_transaction_description_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:hint="Purchase">

            </EditText>

            <TextView
                android:id="@+id/entry_transaction_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Transaction Type"
                android:textSize="18sp">

            </TextView>


            <Spinner
                android:id="@+id/entry_transaction_type_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:focusable="false">
            </Spinner>



            <TextView
                android:id="@+id/entry_transaction_amount_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="18sp"
                android:layout_margin="10dp">
            </TextView>

            <EditText
                android:id="@+id/entry_transaction_amount_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:hint="Amount"
                android:inputType="number">

            </EditText>

            <TextView
                android:id="@+id/entry_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date and Time"
                android:textSize="18sp"
                android:layout_margin="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp" >
                <Button
                    android:id="@+id/entry_date_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:text="Date">
                </Button>

                <Button
                    android:id="@+id/entry_time_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:layout_weight="1">

                </Button>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Transaction"
                android:textSize="18sp"
                android:layout_margin="10dp">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">
                <Button
                    android:id="@+id/entry_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:text="Save">
                </Button>

                <Button
                    android:id="@+id/entry_add_category_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Category"
                    android:layout_weight="1">

                </Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>